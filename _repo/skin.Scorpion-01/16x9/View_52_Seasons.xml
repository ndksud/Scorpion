<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="SeasonList">
		<control type="group">
			<visible>Control.IsVisible(52)</visible>
			<control type="image">
				<include>FullScreenDimensions</include>
				<texture background="true">$INFO[Container.ListItemAbsolute(1).Art(fanart)]</texture>
			</control>
<!-- arrows -->
			<control type="group">
				<control type="group">
					<left>25</left>
					<top>220</top>
					<control type="image">
						<width>100</width>
						<height>200</height>
						<texture>arrow_L.png</texture>
					</control>
				</control>
				<control type="group">
					<left>1795</left>
					<top>220</top>
					<control type="image">
						<width>100</width>
						<height>200</height>
						<texture>arrow_R.png</texture>
					</control>
				</control>
			</control>

<!-- season list -->
			<control type="group">
				<left>100</left>
				<top>130</top>
				<width>1720</width>
				<height>400</height>
				<control type="image">
					<left>30</left>
					<top>10</top>
					<height>370</height>
					<width>1670</width>
					<texture background="true" border="20">season_banner.png</texture>
				</control>
				<control type="wraplist" id="52">
					<width>1740</width>
					<height>400</height>
					<onleft>52</onleft>
					<onright>52</onright>
					<onup>noop</onup>
					<ondown>6000</ondown>
					<orientation>horizontal</orientation>
					<focusposition>2</focusposition>
					<viewtype label="Seasons">list</viewtype>
					<preloaditems>2</preloaditems>
					<visible>Container.Content(seasons)</visible>
					<scrolltime tween="sine" easing="inout" reversable="false">400</scrolltime>
					<itemlayout height="390" width="350" condition="Container.Content(seasons)">
						<control type="group">
							<top>20</top>
							<left>40</left>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture diffuse="paneldif.png">$VAR[Image_Var]</texture>
								<bordersize>5</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture>panel.png</texture>
							</control>
							<control type="label">
								<left>-50</left>
								<top>295</top>
								<height>50</height>
								<width>350</width>
								<align>center</align>
								<font>font40</font>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>

					</itemlayout>
					<focusedlayout height="390" width="350" condition="Container.Content(seasons)">
						<control type="group">
							<top>20</top>
							<left>40</left>
							<include>SeasonZoom</include>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture diffuse="paneldif.png">$VAR[Image_Var]</texture>
								<bordersize>5</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture>panel.png</texture>
							</control>
							<control type="label">
								<left>-50</left>
								<top>295</top>
								<height>50</height>
								<width>350</width>
								<align>center</align>
								<font>font40</font>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>

					</focusedlayout>
				</control>
			</control>

<!-- episodes list -->
			<control type="group">
				<left>350</left>
				<top>620</top>
				<width>1220</width>
				<height>440</height>
				<control type="image">
					<left>50</left>
					<height>440</height>
					<width>1120</width>
					<texture background="true">epi_banner.png</texture>
				</control>
				<control type="image">
					<left>100</left>
					<top>50</top>
					<height>340</height>
					<width>1020</width>
					<aspectratio>keep</aspectratio>
					<visible>Container(52).ListItem.IsParentFolder</visible>
					<texture>defaultfolderbackls.png</texture>
				</control>
				<visible>Container.Content(seasons)</visible>
				<control type="list" id="6000">
					<top>10</top>
					<left>60</left>
					<width>1100</width>
					<height>425</height>
					<onleft>noop</onleft>
					<onright>noop</onright>
					<onup>52</onup>
					<ondown>6000</ondown>
					<focusposition>1</focusposition>
					<orientation>vertical</orientation>
					<preloaditems>2</preloaditems>
					<scrolltime easing="out" tween="quadratic">300</scrolltime>
					<content>$INFO[Container.ListItem.FolderPath]</content>
					<visible>!Container(52).ListItem.IsParentFolder</visible>
					<itemlayout height="140" width="1200">
						<control type="group">
							<control type="image">
								<left>0</left>
								<width>250</width>
								<height>140</height>
								<texture background="true" border="5">50b.png</texture>
								<bordersize>5</bordersize>
							</control>
							<control type="image">
								<left>0</left>
								<width>250</width>
								<height>140</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$VAR[Image_Var]</texture>
								<bordersize>10</bordersize>
							</control>
						</control>
						<control type="group">
							<left>270</left>
							<top>5</top>
							<height>20</height>
							<control type="label">
								<top>7</top>
								<width>1080</width>
								<height>30</height>
								<font>font35</font>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<top>60</top>
								<height>60</height>
								<width>1180</width>
								<font>font30r</font>
								<label>[CAPITALIZE]$VAR[Label_InfoLine][/CAPITALIZE]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
					</itemlayout>
					<focusedlayout height="140" width="1200">
						<control type="image">
							<width>1100</width>
							<height>140</height>
							<texture>EpiButton.png</texture>
							<visible>Control.HasFocus(6000)</visible>
							<include>FOScroll</include>
						</control>
						<control type="group">
							<left>5</left>
							<top>2</top>
							<control type="image">
								<width>250</width>
								<height>140</height>
								<aspectratio aligny="top">scale</aspectratio>
								<texture background="true">$VAR[Image_Var]</texture>
								<bordersize>10</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>140</height>
								<texture border="10">50b.png</texture>
								<bordersize>5</bordersize>
							</control>
						</control>
						<control type="group">
							<left>270</left>
							<top>5</top>
							<height>20</height>
							<control type="label">
								<top>7</top>
								<width>1080</width>
								<height>30</height>
								<font>font35</font>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<top>60</top>
								<height>60</height>
								<width>680</width>
								<font>font30r</font>
								<label>[CAPITALIZE]$VAR[Label_InfoLine][/CAPITALIZE]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>
	</include>
</includes>