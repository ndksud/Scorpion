<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Episode List -->
	<include name="EpisodeList">
		<control type="group">
			<left>60</left>
			<top>140</top>
			<width>1800</width>
			<height>920</height>
			<include>slideright</include>
			<visible>Control.IsVisible(53) + !Window.IsActive(addoninformation)</visible>
			<include>SettingsBG</include>
			<control type="group">
				<control type="wraplist" id="53">
					<left>5</left>
					<top>5</top>
					<width>1800</width>
					<height>900</height>
					<onup>50</onup>
					<ondown>50</ondown>
					<focusposition>1</focusposition>
					<viewtype label="Episodes">list</viewtype>
					<scrolltime tween="cubic" easing="out">400</scrolltime>
					<include>WindowSlide</include>
					<itemlayout height="300" width="1780">
						<control type="group">
							<control type="image">
								<left>0</left>
								<width>500</width>
								<height>300</height>
								<texture background="true" border="5">65.png</texture>
								<bordersize>10</bordersize>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="image">
								<left>0</left>
								<width>500</width>
								<height>300</height>
								<aspectratio aligny="top">scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<visible>!ListItem.IsParentFolder</visible>
								<bordersize>20</bordersize>
							</control>
							<control type="image">
								<left>0</left>
								<width>500</width>
								<height>300</height>
								<texture background="true">defaultfolderbackls.png</texture>
								<visible>ListItem.IsParentFolder</visible>
								<bordersize>10</bordersize>
							</control>
						</control>
						<control type="group">
							<left>550</left>
							<top>25</top>
							<control type="image">
								<top>1</top>
								<width>45</width>
								<height>30</height>
								<aspectratio>keep</aspectratio>
								<texture>$INFO[ListItem.Overlay]</texture>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<left>90</left>
								<width>1200</width>
								<aligny>center</aligny>
								<font>font50</font>
								<label> • BACK • </label>
								<visible>ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<left>70</left>
								<width>1180</width>
								<height>30</height>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
						<control type="group">
							<top>30</top>
							<left>550</left>
							<control type="image">
								<top>65</top>
								<width>45</width>
								<height>30</height>
								<aspectratio>keep</aspectratio>
								<texture>$INFO[ListItem.MPAA,flags/mpaa/,.png]</texture>
								<bordertexture>mpaa_box.png</bordertexture>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<left>70</left>
								<top>50</top>
								<height>60</height>
								<width>1180</width>
								<font>font35</font>
								<label>[CAPITALIZE]$VAR[Label_InfoLine][/CAPITALIZE]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
						<control type="group">
							<bottom>10</bottom>
							<height>130</height>
							<control type="textbox">
								<label>$INFO[ListItem.Plot]</label>
								<left>550</left>
								<width>1180</width>
								<bottom>1</bottom>
								<aligny>center</aligny>
								<textcolor>white2</textcolor>
								<autoscroll>false</autoscroll>
								<font>font30</font>
							</control>
						</control>
					</itemlayout>
					<focusedlayout height="300" width="1780">
							<control type="image">
								<width>1790</width>
								<height>300</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">buttonfo.png</texture>
								<include>FOScroll</include>
							</control>
						<control type="group">
							<control type="image">
								<left>0</left>
								<width>500</width>
								<height>300</height>
								<texture background="true" border="5">65.png</texture>
								<bordersize>10</bordersize>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="image">
								<left>0</left>
								<width>500</width>
								<height>300</height>
								<aspectratio aligny="top">scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<visible>!ListItem.IsParentFolder</visible>
								<bordersize>20</bordersize>
							</control>
							<control type="image">
								<left>20</left>
								<top>210</top>
								<width>85</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<include>FOScroll</include>
								<texture>$VAR[Studio]</texture>
							</control>
							<control type="image">
								<left>0</left>
								<width>500</width>
								<height>300</height>
								<texture background="true">defaultfolderbackls.png</texture>
								<visible>ListItem.IsParentFolder</visible>
								<bordersize>10</bordersize>
							</control>
						</control>
						<control type="group">
							<left>550</left>
							<top>25</top>
							<control type="image">
								<top>1</top>
								<width>45</width>
								<height>30</height>
								<aspectratio>keep</aspectratio>
								<texture>$INFO[ListItem.Overlay]</texture>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<left>90</left>
								<width>1200</width>
								<aligny>center</aligny>
								<font>font50</font>
								<label> • BACK • </label>
								<visible>ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<left>70</left>
								<width>1180</width>
								<height>30</height>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
						<control type="group">
							<top>30</top>
							<left>550</left>
							<control type="image">
								<top>65</top>
								<width>45</width>
								<height>30</height>
								<aspectratio>keep</aspectratio>
								<texture>$INFO[ListItem.MPAA,flags/mpaa/,.png]</texture>
								<bordertexture>mpaa_box.png</bordertexture>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<left>70</left>
								<top>50</top>
								<height>60</height>
								<width>1180</width>
								<font>font35</font>
								<label>[CAPITALIZE]$VAR[Label_InfoLine][/CAPITALIZE]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
						<control type="group">
							<bottom>10</bottom>
							<height>130</height>
							<control type="textbox">
								<label>$INFO[ListItem.Plot]</label>
								<left>550</left>
								<width>1180</width>
								<bottom>1</bottom>
								<aligny>center</aligny>
								<textcolor>white2</textcolor>
								<autoscroll>false</autoscroll>
								<font>font30</font>
							</control>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>
	</include>
</includes>